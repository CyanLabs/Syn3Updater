<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Syn3Updater"
             x:Class="Syn3Updater.App" Name="Syn3 Updater">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"></StyleInclude>
    <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentLight.xaml"></StyleInclude>
    <StyleInclude Source="/Styles/Styles.axaml" />
    <StyleInclude Source="/Styles/SideBar.axaml" />
  </Application.Styles>
  
  <Application.Resources>
    <Brush x:Key="MacOsWindowTitleColor">#4D4D4D</Brush>
    <Brush x:Key="MacOsTitleBarBackground">#DEE1E6</Brush>
  </Application.Resources>
</Application>