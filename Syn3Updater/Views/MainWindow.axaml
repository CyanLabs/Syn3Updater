<syn3Updater:FluentWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Syn3Updater.ViewModels;assembly=Syn3Updater"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="800" Height="800" Width="900"
        xmlns:pages="clr-namespace:Syn3Updater.Pages;assembly=Syn3Updater"
        xmlns:syn3Updater="clr-namespace:Syn3Updater"
        x:Class="Syn3Updater.Views.MainWindow"
        Icon="{x:Null}"
        x:Name="MainWindow"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}"
        Title="Syn3Updater" Closing="Window_OnClosing">
  <syn3Updater:FluentWindow.Styles>
    <Style Selector="TitleBar:fullscreen">
      <Setter Property="Background" Value="#7f000000" />
    </Style>
  </syn3Updater:FluentWindow.Styles>

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Panel Margin="{Binding #MainWindow.OffScreenMargin}">
    <Panel>
      <DockPanel HorizontalAlignment="Stretch" IsVisible="{Binding !RunAsAdmin}">
        <ExperimentalAcrylicBorder DockPanel.Dock="Left" Width="160">
          <ExperimentalAcrylicBorder.Material>
            <ExperimentalAcrylicMaterial TintColor="Black" MaterialOpacity="0.85" TintOpacity="1" />
          </ExperimentalAcrylicBorder.Material>
          <TextBlock FontSize="18" HorizontalAlignment="Stretch" Margin="20 40 20 0" Text="Syn3Updater" />
        </ExperimentalAcrylicBorder>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
          <ExperimentalAcrylicBorder.Material>
            <ExperimentalAcrylicMaterial TintColor="#222222" MaterialOpacity="0.85" TintOpacity="1" />
          </ExperimentalAcrylicBorder.Material>
          <TextBlock Text="{Binding #TabControl.SelectedItem.Header}" Margin="40 20" FontSize="32" FontWeight="Light" />
        </ExperimentalAcrylicBorder>
      </DockPanel>
      <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DarkRed" IsVisible="{Binding RunAsAdmin}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
          <TextBlock Text="APPLICATION IS NOT RUNNING AS ADMINISTRATOR" Margin="0 0" TextAlignment="Center" VerticalAlignment="Center" Padding="0, 20" FontSize="32" FontWeight="Light" />
          <TextBlock Text="THIS APPLICATION REQUIRES ADMINISTRATIVE ACCESS TO BE ABLE TO FORMAT THE USB DRIVES" Margin="0 0" TextAlignment="Center" VerticalAlignment="Center" Padding="0, 20" FontSize="18" FontWeight="Light" />
        </StackPanel>
      </DockPanel>
      
      <TabControl x:Name="TabControl" Classes="sidebar" Margin="0 40 0 20" SelectedIndex="{Binding SelectedTab}" IsVisible="{Binding !RunAsAdmin}">
        <TabItem Header="Home">
          <pages:HomePage />
        </TabItem> 
        <TabItem Header="Downloads">
          <pages:DownloadPage />
        </TabItem>
      </TabControl>
    </Panel>
  </Panel>
</syn3Updater:FluentWindow>
